@using Microsoft.AspNetCore.Identity
@inject UserManager<Alpha.Models.ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">



    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <div class="portal">

        <div class="side">
            <div class="logo">
                <img src="~/images/Logo.svg" alt="Logo" />
                <h3 id="title">alpha</h3>
            </div>
            <div class="project-tab">
                <img src="~/images/Projects.svg" alt="Projects" />
                <a id="projects-tag" asp-controller="Project" asp-action="Index">Projects</a>
            </div>
        </div>


        <div class="top">
            <a href="#"><img src="~/images/Setting.svg" alt="Settings" /></a>

            <div class="account-wrapper">
                <button id="account-toggle" class="btn-account" type="button">
                    <img src="~/images/Avatar.svg" alt="Avatar" />
                </button>

                <div id="account-dropdown" class="dropdown-menu">
                    <div class="account-info">
                        <img src="~/images/Avatar.svg" alt="Avatar" />
                        <p>@user?.FullName</p>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="logout-btn">
                            <i class="fa-solid fa-right-from-bracket"></i> Logout
                        </button>
                    </form>
                </div>
            </div>

        </div>

        <div class="main">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="~/js/site.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
</body>
</html>
