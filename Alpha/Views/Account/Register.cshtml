@model Alpha.Models.ViewModels.RegisterViewModel

@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Register";
}

<div class="center-screen">
    <div class="surface" id="signup-surface">
        <form class="signup-form" asp-action="Register" asp-controller="Account" method="post">
            <h2>Create Account</h2>

            <div asp-validation-summary="All" class="text-danger small"></div>

            <div class="form-input-group">
                <label asp-for="FullName"></label>
                <input asp-for="FullName" class="input-field form-control" placeholder="Your full name" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="form-input-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="input-field form-control" placeholder="Your email address" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-input-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="input-field form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-input-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="input-field form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="terms">
                <input asp-for="AcceptTerms" type="checkbox" />
                <label asp-for="AcceptTerms">I accept <a href="#">Terms and Conditions</a></label>
                <span asp-validation-for="AcceptTerms" class="text-danger small"></span>
            </div>

            <button class="btn-blue btn-submit w-100" type="submit">Create Account</button>
            <p class="login-link">Already have an account? <a href="/Account/Login">Login</a></p>
        </form>

    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}

