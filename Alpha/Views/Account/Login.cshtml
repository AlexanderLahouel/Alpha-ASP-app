@using Alpha.Models.ViewModels
@model LoginViewModel

@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Login";
}


    <div class="surface" id="signin-surface">
        <form asp-action="Login" asp-controller="Account" method="post" class="signin-form">
        <div asp-validation-summary="All" class="text-danger small"></div>
            <h2>Login</h2>


            <div class="form-input-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="input-field form-control" placeholder="Your email address" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-input-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="input-field form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

        <div class="remember">
            <input asp-for="RememberMe" type="checkbox" />
            <label asp-for="RememberMe">Remember Me</label>
        </div>

            <button type="submit" class="btn-blue btn-submit w-100 mt-3">Log in</button>
         <p class="signup-link">Don't have an account? <a href="/Account/Register">Sign Up</a></p>
        </form>

    </div>


@section Scripts {
    <script src="~/js/site.js"></script>
}



